{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/hooks": ["src/hooks"],
      "@/firebase/*": ["firebase/*"],
      "@/provider/*": ["src/hooks/*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/core/*": ["src/components/*"],
      "@/functions": ["src/functions"],
      "@/middlewares": ["src/middlewares"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
